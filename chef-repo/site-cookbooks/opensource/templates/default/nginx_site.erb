server {
  listen 80;
  server_name _;
  server_tokens off;
  <% if node[:env] == "prod" %>
  access_log  off;
  <% end %>
  
  error_page 500 502 503 504 /index.html;
  error_page 400 404 /index.html;

  location / {
    root /var/www/gcom-opensource/current/website;
    index index.html index.html;
  }

}

